<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddGoalActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/view_add_goal"
    android:background="@drawable/purple_sunset"
    >

    <!-- 음식 종류 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="목표 설정할 음식"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_goal_food"
        />
    <EditText
        android:id="@+id/goal_edit_food"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="음식을 입력하세요."
        android:padding="10dp"
        android:textColorHint="#80FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:gravity="center"
        />

    <!-- 제한할 횟수  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="제한할 음식 횟수"
        android:drawableLeft="@drawable/ic_goal_count"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/goal_edit_count"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="횟수를 입력하세요."
        android:padding="10dp"
        android:textColorHint="#80FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:gravity="center"
        />

    <!-- 마감일 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="목표 마감일 설정"
        android:textSize="18dp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_goal_date"
        />

    <!-- 추후 dialog date로 마감일 선택하는 거로! -->
    <DatePicker
        android:id="@+id/goal_datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:theme="@style/datepicker"
       />

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/goal_add_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:text="저장하기"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        />

</LinearLayout>